<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="80dp" >

    <ImageView
        android:id="@+id/mail_list_pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/programdetailcontentdescription"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/play_item_state_on" />

    <TextView
        android:id="@+id/mail_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/mail_list_pic"
        android:paddingLeft="3dp"
        android:paddingTop="5dp"
        android:layout_centerVertical="true"
        android:text="@string/play_header_title"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/mail_list_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/play_header_title"
        android:textColor="@color/orange"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mail_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/mail_list_content"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:paddingTop="3dp"
        android:textSize="12dp"
        android:text="@string/play_header_title"
        android:textColor="@color/black_trans" />

</RelativeLayout>